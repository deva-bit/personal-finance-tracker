{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "whatsapp-bot/Dockerfile",
    "watchPatterns": ["whatsapp-bot/**"]
  },
  "deploy": {
    "startCommand": "node index-standalone.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
